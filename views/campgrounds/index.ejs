<% layout("layouts/boilerplate") %>
<h1>All Campgrounds</h1>
<div id="map" style="width: 100%; height: 500px"></div>
<div><a href="/campgrounds/new">New campground</a></div>
<br />

<% for (let camp of campgrounds) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <% if (camp.images.length) { %>
      <img class="img-fluid" src="<%= camp.images[0].url %> " alt="" />
      <% } else { %>
      <img class="img-fluid" src="https://res.cloudinary.com/dif56ifhc/image/upload/v1690479400/YelpCamp/No-Image-Placeholderif5pe.png" alt="" />
      <% } %>
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= camp.title %></h5>
        <p class="card-text"><%= camp.description %></p>
        <p class="card-text">
          <small class="text-muted"><%= camp.location %> </small>
        </p>
        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %> </a>
      </div>
    </div>
  </div>
</div>
<% } %>

<script>
  const mapToken = "<%=process.env.MAPBOX_TOKEN%>";
  const campgrounds = { features: <%-JSON.stringify(campgrounds)%>}
</script>
<script src="/js/clusterMap.js"></script>
